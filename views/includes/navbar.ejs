    <% } %> <% if(currUser) {%>
    <div class="logged-user-box" onclick="userClickHandler()">
      <img
        src="<%=currUser.profilephoto.url%>"
        alt=""
        loading="lazy"
        class="nav-profile-photo"
      />
      <span style="font-size: 14px">@<%=currUser.username%></span>
